<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<ImageView android:layout_width="fill_parent"
		android:layout_height="75dp" android:src="@drawable/wordmark"
		android:padding="0dp" android:layout_gravity="center"
		android:scaleType="centerCrop" />

	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<TextView android:id="@+id/title" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:padding="2pt"
			android:textAppearance="?android:attr/textAppearanceMedium" />
		<TextView android:id="@+id/time" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:padding="2pt"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#000000" />
		<TextView android:id="@+id/date" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:padding="2pt"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#000000" />
		<TextView android:id="@+id/course_id" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:padding="2pt"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#000000" />
		<TextView android:id="@+id/room" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:padding="2pt"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#000000" />
		<TextView android:id="@+id/personnel" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:padding="2pt"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#000000" />
		<TextView android:id="@+id/moment" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:padding="2pt"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#000000" />
		<TextView android:id="@+id/remark" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:padding="2pt"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#000000" />

		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:gravity="center">
			<ImageButton android:id="@+id/close_button"
				android:layout_width="70dp" android:layout_height="wrap_content"
				android:gravity="center" android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="Close" android:src="@drawable/close_box"  />
		</LinearLayout>
	</LinearLayout>

</LinearLayout>